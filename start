_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $fusion_REPO == "fusionbot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RlYW1GdXNzaW9uL0Z1c3Npb24vYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $fusion_REPO == "fusionbot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RlYW1GdXNzaW9uL0Z1c3Npb24vYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $fusion_REPO =~ $regex ]]
    then
        if [[ $fusion_REPO_BRANCH ]]
        then
            echo "${fusion_REPO}/archive/${fusion_REPO_BRANCH}.zip"
        else
            echo "${fusion_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RlYW1GdXNzaW9uL0Z1c3Npb24vYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    fi
}

_setting_bot () {
    local zippath
    zippath="start.zip"
    echo "  Downloading Fusion V3.O Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    FUSIONPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  fusion V3.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $FUSIONPATH
    echo "    ⚜️Starting ⚜️     "
    

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
