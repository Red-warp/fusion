

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $FUSSION_REPO == "Fussion" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $FUSSION_REPO == "Fussion" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $FUSSION_REPO =~ $regex ]]
    then
        if [[ $FUSSION_REPO_BRANCH ]]
        then
            echo "${FUSSION_REPO}/archive/${FUSSION_REPO_BRANCH}.zip"
        else
            echo "${FUSSION_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="Fussion.zip"
    echo "  Downloading PythonBot V9.O.8 Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    PYTHONPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  PythonBot V9.O.8 Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $FussionPATH
    echo "    üêç—ïœÑŒ±—èœÑŒπ–∏g —ï–ºŒøŒøœÑ–Ω—î—ïœÑ Pythonùï≠√∏ùñô V9.O.8üêç     "
    echo "
    PYTHONBOT
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
